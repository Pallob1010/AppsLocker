<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"


    >

    <TextView
        android:id="@+id/jklop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="Set Lock Type"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/radioLock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioLock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jklop">

        <RadioButton
            android:id="@+id/radioPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin Lock"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <RadioButton

            android:id="@+id/radioPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pattern Lock"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>